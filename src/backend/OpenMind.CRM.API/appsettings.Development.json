{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [{ "Name": "Console" }],
    "Enrich": ["FromLogContext"]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5433;Database=OpenMindCRM;Username=postgres;Password=postgres"
  },
  "JWT": {
    "Secret": "super-secret-secret-secret-secret-secret-secret-secret"
  },
  "Google": {
    "ClientId": "",
    "ClientSecret": "",
    "RedirectUri": "http://localhost:8001/api/google/callback"
  },
  "AllowedHosts": "*",
  "Auth": {
    "RedirectUrls": {
      "Google": {
        "Success": "http://localhost:4200/dashboard?googleAuth=success",
        "Error": "http://localhost:4200/dashboard?googleAuth=error"
      },
      "Microsoft": {
        "Success": "http://localhost:4200/dashboard?microsoftAuth=success",
        "Error": "http://localhost:4200/dashboard?microsoftAuth=error"
      }
    }
  }
}
