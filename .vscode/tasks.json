{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Backend API",
			"type": "shell",
			"command": "dotnet run --project src/backend/OpenMind.CRM.API",
			"isBackground": true,
			"problemMatcher": [],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "Start Frontend",
			"command": "npm",
			"type": "shell",
			"args": [
				"start"
			],
			"options": {
				"cwd": "${workspaceFolder}/src/frontend"
			},
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Full Application",
			"dependsOrder": "parallel",
			"dependsOn": [
				"Start Backend API",
				"Start Frontend"
			],
			"group": "build"
		},
		{
			"label": "Build Backend",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"build"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "Build Frontend",
			"command": "npm",
			"type": "shell",
			"args": [
				"run",
				"build"
			],
			"options": {
				"cwd": "${workspaceFolder}/src/frontend"
			},
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"problemMatcher": []
		}
	]
}